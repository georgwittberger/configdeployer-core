<?xml version="1.0" encoding="UTF-8"?>
<config-profile name="Example Profile" description="This is an example profile." version="1.0" xmlns="http://tsmms.com/utils/configdeployer/profile" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://tsmms.com/utils/configdeployer/profile config-profile.xsd ">
  <properties-files>
    <properties-file location="${env:BASEDIR}/myconfig.properties">
      <entry operation="ADD" key="key_to_add" value="Entry is only added if key does not exist"/>
      <entry operation="UPDATE" key="key_to_update" value="Entry is only updated if key already exists"/>
      <entry operation="SET" key="key_to_set" value="Entry is only added/updated if condition is satisfied">
        <condition value-contains="Current value must contain this string"/>
      </entry>
      <entry operation="DELETE" key="key_to_delete"/>
      <entry operation="RENAME" key="key_to_rename" value="new_key"/>
    </properties-file>
    <properties-file location="${sys:user.home}/personal.properties">
      <entry operation="SET" key="key_to_set" value="Entry is always added/updated with this value"/>
    </properties-file>
    <properties-file location="${sys:user.home}/obsolete.properties" operation="DELETE"/>
  </properties-files>
  <databases>
    <database driver-class="oracle.jdbc.OracleDriver" jdbc-url="jdbc:oracle:thin:@myhost:1521:orcl" username="username" password="password">
      <entry operation="ADD" table-name="mytable">
        <column-value name="mycolumn1" type="VARCHAR" value="sample_value"/>
        <column-value name="mycolumn2" type="INTEGER" value="42"/>
      </entry>
      <entry operation="UPDATE" table-name="mytable" condition="mycolumn2 &gt; 42">
        <column-value name="mycolumn1" type="VARCHAR" value="new_value"/>
      </entry>
      <entry operation="DELETE" table-name="mytable" condition="mycolumn2 &lt; 42"/>
    </database>
  </databases>
</config-profile>
